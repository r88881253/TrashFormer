<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dialog_default_shape"
    android:orientation="vertical"
    android:paddingBottom="84dp"
    android:paddingTop="64dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/get_present"
        android:textColor="@color/inputText_4D555B"
        android:textSize="30dp" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:src="@drawable/gift_box" />

    </RelativeLayout>

    <Button
        android:id="@+id/btnPasswordConfirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="60dp"
        android:background="@drawable/btn_login_shape"
        android:paddingLeft="80dp"
        android:paddingRight="80dp"
        android:text="@string/btn_get_confirm"
        android:textColor="@color/white"
        android:textSize="25sp" />

</LinearLayout>