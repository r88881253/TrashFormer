<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="84dp"
    android:paddingTop="64dp"
    android:orientation="vertical"
    android:background="@drawable/dialog_default_shape">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/logout_confirm"
        android:textColor="@color/inputText_4D555B"
        android:textSize="30dp"/>

    <Button
        android:id="@+id/btnLogoutConfirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingRight="80dp"
        android:paddingLeft="80dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="60dp"
        android:background="@drawable/btn_logout_shape"
        android:text="@string/btn_logout_confirm"
        android:textColor="@color/white"
        android:textSize="25sp" />

</LinearLayout>