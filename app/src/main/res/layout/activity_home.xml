<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".HomeActivity">

    <data>

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/home_background_layer_list">

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="200dp"
            android:layout_marginLeft="64dp"
            android:layout_marginTop="64dp"
            android:background="@drawable/home_card_shape"
            android:orientation="vertical"
            android:paddingBottom="24dp"
            android:paddingLeft="32dp"
            android:paddingRight="32dp"
            android:paddingTop="24dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="垃圾袋寶包"
                android:textSize="30sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/lebelTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="等級"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="20"
                    android:textSize="26sp"
                    android:textStyle="bold" />

                <ProgressBar
                    android:id="@+id/homeProgressBar"
                    style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="15dp"
                    android:backgroundTint="@color/progress_bar_background_end_4D555B"
                    android:indeterminate="false"
                    android:max="100"
                    android:maxHeight="100dip"
                    android:minHeight="100dip"
                    android:progress="60"
                    android:progressBackgroundTint="@color/progress_bar_progress_start_F04A4A"
                    android:secondaryProgressTint="@color/progress_bar_progress_start_F04A4A" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp">

                <ImageView
                    android:id="@+id/heart1"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_weight="1"
                    android:src="@drawable/heart" />

                <ImageView
                    android:id="@+id/heart2"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_weight="1"
                    android:src="@drawable/heart" />

                <ImageView
                    android:id="@+id/heart3"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_weight="1"
                    android:src="@drawable/heart" />

                <ImageView
                    android:id="@+id/heart4"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_weight="1"
                    android:src="@drawable/heart" />

                <ImageView
                    android:id="@+id/heart5"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_weight="1"
                    android:src="@drawable/heart" />
            </LinearLayout>


        </LinearLayout>


        <LinearLayout
            android:layout_width="280dp"
            android:layout_height="200dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="64dp"
            android:layout_marginTop="64dp"
            android:background="@drawable/home_card_shape"
            android:orientation="horizontal"
            android:paddingBottom="16dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="16dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:src="@drawable/gift_box" />

                <TextView
                    android:id="@+id/gift_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="1"
                    android:textSize="30sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/gift_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/gift"
                    android:textSize="22sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:src="@drawable/scroll" />

                <TextView
                    android:id="@+id/mission_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="1/5"
                    android:textSize="30sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/mission_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="@string/mission"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/mission_kind"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="@string/aluminum_can"
                        android:textSize="20sp" />

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true">

            <ImageView
                android:id="@+id/avatar_head"
                android:layout_width="280dp"
                android:layout_height="250dp"
                android:layout_centerHorizontal="true"
                android:elevation="1dp"
                android:src="@drawable/avartar_head_xmas_hat" />

            <LinearLayout
                android:id="@+id/avatar_body_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/avatar_head"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="-130dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="160dp"
                    android:layout_height="240dp"
                    android:layout_marginRight="-25dp"
                    android:layout_marginTop="30dp"
                    android:layout_toLeftOf="@id/avatar_body"
                    android:src="@drawable/avatar_left_candycane" />

                <ImageView
                    android:id="@+id/avatar_body"
                    android:layout_width="240dp"
                    android:layout_height="280dp"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/avatar_body_normal" />

                <ImageView
                    android:layout_width="160dp"
                    android:layout_height="240dp"
                    android:layout_marginLeft="-25dp"
                    android:layout_marginTop="30dp"
                    android:layout_toRightOf="@id/avatar_body"
                    android:src="@drawable/avatar_right_normal" />

            </LinearLayout>

            <ImageView
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/avatar_body_layout"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="-55dp"
                android:src="@drawable/avatar_feet_normal" />

        </RelativeLayout>

        <!--android:progressDrawable="@drawable/horizontal_progressbar"-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="48dp"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/equipment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="60dp"
                android:layout_marginRight="30dp"
                android:background="@drawable/btn_equipment_shape" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:background="@drawable/btn_report_shape"
                android:textSize="30sp" />

            <Button
                android:id="@+id/btnCamera"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:background="@drawable/btn_camera_shape"
                android:textSize="30sp" />

            <Button
                android:id="@+id/btnSetting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="60dp"
                android:background="@drawable/btn_setting_shape"
                android:textSize="30sp" />


        </LinearLayout>

    </RelativeLayout>
</layout>