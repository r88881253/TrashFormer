<?xml version="1.0" encoding="utf-8"?>
<layout>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/dialog_default_shape"
        android:orientation="vertical"
        android:paddingBottom="50dp">

        <LinearLayout
            android:id="@+id/iconSettingLinearLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iconSetting"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:src="@drawable/home_settings" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="@string/setting"
                android:textColor="@color/inputText_4D555B"
                android:textSize="30sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/password_layout"
            android:layout_width="570dp"
            android:layout_height="80dp"
            android:layout_below="@id/iconSettingLinearLayout"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="18dp"
            android:background="@drawable/login_text_input_layout"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/nickName"
                android:textColor="@color/inputText_4D555B"
                android:textSize="30sp" />

            <EditText
                android:id="@+id/nickNameEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:background="@null"
                android:maxLines="1"
                android:textColor="@color/inputText_4D555B"
                android:textSize="30sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/selectItemTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/password_layout"
            android:layout_alignLeft="@id/password_layout"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="24dp"
            android:text="@string/select_recycle_item"
            android:textColor="@color/inputText_4D555B"
            android:textSize="30sp" />

        <RadioGroup
            android:id="@+id/recycler_item_linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/selectItemTextView"
            android:layout_alignLeft="@id/password_layout"
            android:layout_alignRight="@id/password_layout"
            android:checkedButton="1"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/btnBottle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:button="@drawable/selector_btn_bottle" />

            <RadioButton
                android:id="@+id/btnCan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:button="@drawable/selector_btn_can" />

            <RadioButton
                android:id="@+id/btnBattery"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:button="@drawable/selector_btn_battery" />

            <RadioButton
                android:id="@+id/btnGlass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:button="@drawable/selector_btn_glass" />
        </RadioGroup>

        <Button
            android:id="@+id/btnLogout"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/recycler_item_linearLayout"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="80dp"
            android:background="@drawable/btn_logout_shape"
            android:text="@string/logout"
            android:textColor="@color/white"
            android:textSize="25sp" />
    </RelativeLayout>

</layout>