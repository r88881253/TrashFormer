<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <import type="android.view.View"/>
        <variable
            name="viewmodel"
            type="com.bbhackathon.trashformer.login.LoginViewModel">
        </variable>

    </data>

    <RelativeLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/imageViewLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginLeft="200dp"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                app:srcCompat="@drawable/login_title" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_weight="2"
                android:layout_marginRight="100dp"
                app:srcCompat="@drawable/login_pic" />

        </LinearLayout>


        <android.support.design.widget.TextInputLayout
            android:layout_below="@+id/imageViewLayout"
            android:id="@+id/account_layout"
            android:layout_centerHorizontal="true"
            android:layout_width="400dp"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/accountEditText"
                android:hint="@string/account"
                android:text="@={viewmodel.account}"
                android:textSize="30sp"
                android:textColor="#000000"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"/>
        </android.support.design.widget.TextInputLayout>


        <android.support.design.widget.TextInputLayout
            android:layout_below="@id/account_layout"
            android:id="@+id/password_layout"
            android:layout_centerHorizontal="true"
            android:layout_width="400dp"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/passwordEditText"
                android:hint="@string/password"
                android:text="@={viewmodel.password}"
                android:textSize="30sp"
                android:textColor="#000000"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"/>
        </android.support.design.widget.TextInputLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp"
            android:orientation="horizontal"
            android:layout_below="@id/password_layout">
            <Button
                android:id="@+id/btnCreateAccount"
                android:text="@string/create_account"
                android:textSize="25sp"
                android:layout_marginLeft="25dp"
                android:layout_width="150dp"
                android:layout_height="wrap_content" />
            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:visibility="@{View.INVISIBLE}"/>
            <Button
                android:id="@+id/btnLogin"
                android:text="@string/login"
                android:textSize="25sp"
                android:layout_marginRight="25dp"
                android:layout_width="150dp"
                android:layout_height="wrap_content" />


        </LinearLayout>

    </RelativeLayout>

</layout>